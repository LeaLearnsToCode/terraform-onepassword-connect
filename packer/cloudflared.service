# /etc/systemd/system/cloudflared.service

[Unit]
Description=Cloudflared Argo Tunnel
After=network.target

[Service]
TimeoutStartSec=0
Type=notify
ExecStart=/usr/local/bin/cloudflared --config /etc/cloudflared/config.yml tunnel run onepassword-connect
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
