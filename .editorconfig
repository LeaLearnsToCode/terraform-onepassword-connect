# File is sourced from LeaLearnsToCode/base-repo-template
# Do not modify!
[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.sh]
end_of_line = lf

[*.{yml, yaml}]
indent_size = 2

[*.md]
max_line_length = off

[{justfile, *.justfile}]
indent_size = 2

[{*.env, *.env.example}]
max_line_length = off
